<div id="cart_item_<%= "#{cart_item.product_id}_#{cart_item.size}_#{cart_item.color}".parameterize %>" class="p-4 border rounded-lg shadow bg-white">
  <h2 class="text-xl font-semibold"><%= cart_item.product.name %></h2>
  <p class="text-gray-600">Color: <%= cart_item.color %></p>
  <p class="text-gray-600">Size: <%= cart_item.size %></p>
  <p class="text-gray-700">Price: $<%= number_with_precision(cart_item.product.price, precision: 2) %></p>

  <p class="text-gray-600">Quantity: <%= cart_item.quantity %></p>

  <div class="flex gap-2 mt-2">
    <%= button_to "+", cart_path(product_id: cart_item.product_id, size: cart_item.size, color: cart_item.color),
        method: :post, form: { data: { turbo_stream: true } },
        class: "px-3 py-1 bg-green-500 text-white rounded" %>

    <%= button_to "-", remove_one_cart_item_cart_path(product_id: cart_item.product_id, size: cart_item.size, color: cart_item.color),
        method: :delete, form: { data: { turbo_stream: true } },
        class: "px-3 py-1 bg-red-500 text-white rounded" %>

    <%= button_to "Remove All", remove_all_cart_item_cart_path(product_id: cart_item.product_id, size: cart_item.size, color: cart_item.color),
        method: :delete, form: { data: { turbo_stream: true } },
        class: "px-3 py-1 bg-gray-500 text-white rounded ml-2" %>
  </div>
</div>

