<%= turbo_stream.update("add-to-cart", partial: "products/add_to_cart", locals: { product: @product })%>
<%= turbo_stream.update("cart", partial: "layouts/cart", locals: { cart: @current_cart }) %>
<%= turbo_stream.update("cart_item_#{@product.id}_#{params[:size]}_#{params[:color]}".parameterize, partial: "carts/cart_item", locals: { cart_item: @current_cart.cart_items.find_by(product_id: @product.id, size: params[:size], color: params[:color]), cart: @current_cart }) %>
<%= turbo_stream.update("cart-summary", partial: "carts/cart_summary", locals: { cart: @current_cart }) %>

