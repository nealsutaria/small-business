<div class="w-full max-w-7xl mx-auto px-6 py-12">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-50 text-green-700 border border-green-200 rounded-lg mb-6 font-medium" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "Riya's Best Products" %>

  <h1 class="text-4xl md:text-6xl font-extrabold text-center text-indigo-700 mb-10">Riya's Best Products</h1>

  <div id="products" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
    <% @products.each do |product| %>
      <%= render partial: "product", locals: { product: product } %>
    <% end %>
  </div>

  <div class="mt-12 text-center">
    <%= link_to "Shop by Category", categories_path, class: "inline-block px-6 py-3 text-lg font-semibold bg-gray-100 hover:bg-gray-200 rounded-lg shadow-sm transition" %>
  </div>
</div>

